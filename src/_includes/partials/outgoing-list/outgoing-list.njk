<div
	class="relative mt-16 ml-auto flex h-16 max-w-1/2 items-center justify-start rounded-l-[70px] bg-gradient-to-r from-seance-2 to-medium-purple-2 before:absolute before:top-2 before:left-2 before:right-0 before:z-[-1] before:h-16 before:rounded-l-[70px] before:rounded-r-[0] before:ring-1 before:ring-white"
>
	<p class="py-5 px-9">Мы делаем</p>
</div>
<div class="container mx-auto mt-14 lg:min-h-[280px]">
	<div
		class="z-10 mx-auto grid max-w-max gap-x-5 sm:grid-cols-2 lg:absolute lg:grid-cols-3"
	>
		{% for item in design.design %}
		<div
			class="{% if loop.index === 3 %} {% endif %} relative w-[33%] min-w-[320px] max-w-[390px] sm:col-span-2 sm:mx-auto lg:col-auto lg:mx-0"
		>
			<div class="rounded-[20px] bg-cod-gray p-5">
				<div
					class="relative after:absolute after:h-1 after:w-full after:rounded-[2.5px] after:bg-gradient-to-r after:from-blue-ribbon after:to-electric-violet"
				>
					<p class="text-lg">{{ item.name }}</p>
				</div>
				<div
					x-data="{ open: false }"
					class="relative bg-transparent bg-opacity-100 pt-6 font-medium tracking-normal after:absolute after:bottom-6 after:h-1 after:w-full after:translate-y-full after:rounded-sm after:bg-gradient-to-r after:from-blue-ribbon after:to-electric-violet"
				>
					<ul
						class="relative grid gap-6 overflow-hidden transition-all duration-300 before:absolute before:bottom-0 before:h-10 before:w-full before:bg-gradient-to-t"
						:class="open ? 'max-h-screen' : 'max-h-[170px] before:from-cod-gray'"
					>
						{% for subitem in item.text %}
						<li>{{ subitem.name }}</li>
						{% endfor %}
					</ul>
					<button
						@click="open = !open"
						class="relative z-[1] mx-auto flex h-12 w-12 items-center justify-center rounded-4xl bg-white bg-gradient-to-b from-medium-purple-2 to-seance-2 shadow-purp transition-all duration-500 hover:opacity-75"
					>
						<span
							style="
								background-image: url(data:image/svg+xml;base64,);
							"
							class="absolute h-full w-full bg-1/2 bg-center bg-no-repeat transition-all ease-linear"
							:class="open ? 'rotate-180' : ''"
						></span>
					</button>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
