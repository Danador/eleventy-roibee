{% macro buttonDefoult(alpine, alpineObjectName, white, class, icon, svgClass, svg, buttonText) %}
    <button
        {% if alpine == true %}
            @click="{{ alpineObjectName }}"
        {% endif %}
        {% if white == true %}
            class="{{ class }} mb-4 md:mx-auto sm:mx-auto sm:w-max flex mt-10 text-black items-center justify-center py-4 px-8 rounded-[50px] self-center w-max cursor-pointer transition-shadow duration-300 ease-linear relative font-semibold tracking-[0.145em] m-auto bg-gradient-to-b from-white to-silver shadow-white active:opacity-60 active:shadow-puk/[.60] hover:shadow-puk focus:shadow-puk md:mb-0 md:ml-0"
        {% endif %}
        class="{{ class }} flex items-center justify-center max-w-max text-lg font-bold text-white transition-all rounded-full outline-none bg-gradient-to-t from-seance-2 to-medium-purple-2 focus:outline-none disabled:bg-gray-500 shadow-medium-purple shadow-purp hover:shadow-fiol hover:shadow-medium-purple"
        >
        
        {% if icon == true %}
            <svg class="{{ svgClass }}">
                <use xlink:href="/images/icons/all-icon.svg#{{ svg }}"></use>
            </svg> 
        {% else %}
            {{ buttonText }}
        {% endif %}
    </button>
{% endmacro %}