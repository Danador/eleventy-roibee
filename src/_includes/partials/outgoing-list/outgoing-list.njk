<div class="h-16 bg-gradient-to-r from-seance-2/[1.87] to-medium-purple-2/[1.10] mt-16 max-w-1/2 relative flex items-center rounded-l-[70px] ml-auto justify-start before:absolute before:h-16 before:ring-1 before:ring-white before:z-[-1] before:top-2 before:rounded-l-[70px] before:left-2 before:right-0 before:rounded-r-[0]">
    <p class="py-5 px-9">Мы делаем</p>
</div>
<div class="container mx-auto mt-14 lg:min-h-[280px]">
    <div class="grid mx-auto max-w-max sm:grid-cols-2 lg:grid-cols-3 gap-x-5 lg:absolute z-10">
        {% for item in design.design %}
            <div class="relative {% if loop.index === 3 %} sm:col-span-2 lg:col-auto sm:mx-auto lg:mx-0 {% endif %} min-w-[320px] w-[33%] max-w-[390px]">
                <div class="p-5 bg-cod-gray rounded-[20px]">
                    <div class="relative after:h-1 after:w-full after:rounded-[2.5px] after:bg-gradient-to-r after:from-blue-ribbon after:to-electric-violet after:absolute">
                        <p class="text-lg">{{ item.name }}</p>
                    </div>
                    <div x-data="{ open: false }" class="relative pt-6 font-medium tracking-normal bg-transparent bg-opacity-100 after:absolute after:bottom-6 after:translate-y-full after:w-full after:h-1 after:rounded-sm after:bg-gradient-to-r after:from-blue-ribbon after:to-electric-violet">
                        <ul
                            class="grid gap-6 overflow-hidden transition-all duration-300 relative before:bg-gradient-to-t before:absolute before:h-10 before:bottom-0 before:w-full "
                            :class="open ? 'max-h-screen' : 'max-h-[170px] before:from-cod-gray'"
                        >
                            {% for subitem in item.text %}
                                <li>{{ subitem.name }}</li>
                            {% endfor %}
                        </ul>
                        <button 
                                @click="open = !open"
                                class="hover:opacity-75 relative mx-auto rounded-4xl h-12 w-12 z-[1] bg-gradient-to-b from-medium-purple-2 to-seance-2 transition-all duration-500 shadow-purp bg-white flex items-center justify-center">
                            <span style="background-image:url(data:image/svg+xml;base64,);" class="absolute w-full h-full transition-all ease-linear bg-center bg-no-repeat bg-1/2" :class="open ? 'rotate-180' : ''"></span>
                        </button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>