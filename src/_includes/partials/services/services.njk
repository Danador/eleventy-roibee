{% from "components/buttons.njk" import button with context %}
{% import "components/modal.njk" as elModal %}
{% from "components/label.njk" import label with context %}

{% set serviceList = [
	{
		"text" : "Лендинг сайта"
	},
	{
		"text" : "Редизайн"
	},
	{
		"text" : "Дизайн сайта полностью"
	},
	{
		"text" : "Дизайн интернет магазинов"
	},
	{
		"text" : "Создание логотипов"
	}
]
%}

{% set process = [
	{
		"title" : "Обсуждение",
		"text" : "Что ожидает клиент от сайта, какие у него представления о сайте, что он хочет донести до клиента, какая тематика."
	},
	{
		"title" : "СТИЛЬ",
		"text" : "Какой стиль хочет, какие цвета и дизайн предпочитает клиент. Показываем прототипы сайтов. Если клиент полагается полностью на воображение и опыт работы дизайнера, то всё будет выполнено по предпочтениям исполнителя!"
	},
	{
		"title" : "Согласование",
		"text" : "Обговариваем цену и срок. На сколько расчитывает клиент. Исходя из требований клиента, дизайнер говорит свой срок и цену. Стороны соглашаются и начинается процесс создания!"
	}
] 
%}

<section
	id="services"
	x-data="{ services : false }" 
	class="pt-20"
	>
	{{ label(
		theme = 'left',
		text = "Услуги"
	) 
	}}
	<div class="px-5 py-6 swiper swiper-service">
		<div class="swiper-service-scrollbar relative h-2.5 w-full rounded-full md:hidden">
			<div class="h-full rounded-full swiper-scrollbar-drag bg-gradient-to-r from-seance-2 to-medium-purple-2"></div>
		</div>
		<div class="swiper-wrapper md:grid">
			{% for item in service.services %}
			<div class="swiper-slide">
				<div class="m-7 mx-auto grid max-w-[310px] gap-x-12 rounded-3xl bg-gradient-to-b from-medium-purple-2 to-seance-2 sm:gap-y-1 md:max-w-[800px] md:grid-cols-a1 md:gap-y-5 md:p-5">
					<p class="pt-[29px] pb-[10px] text-center text-lg font-bold md:hidden">
						{{ item.title }}
					</p>
					<div class="w-full mx-auto">
						<div class="grid h-[220px] w-[300px]">
							<img
								src="/assets/images/{{ item.img }}"
								alt="человекозаврик"
							/>
						</div>
						<div class="relative mx-auto w-max">
							<div
								class="relative z-[1] my-4 w-max rounded-[50px] bg-bright-sun py-[10px] px-[16px] font-semibold not-italic text-black"
							>
								<p>от {{ item.price }} руб</p>
							</div>
							<div
								class="z-[1]rounded-[3px] absolute -left-1/4 top-1/2 h-[3px] w-[150%] bg-white"
							></div>
						</div>
					</div>
					<div>
						<div class="hidden md:block">
							<p class="pt-[20px] text-[20px] font-bold">
								{{ item.title }}
							</p>
						</div>
						<ul
							class="grid pt-1 pl-1 text-lg font-semibold gap-y-6"
						>
							{% for subitem in item.serviceText %}
							<li
								class="{% if loop.index === 1 %} {% else %} {% endif %} hidden max-w-max pr-[20%] pl-[20%] text-center md:block md:pr-0 md:pl-0 md:text-left lg:p-0 lg:text-left"
							>
								{{ subitem.text }}
							</li>
							{% endfor %}
						</ul>
						{% call button(
							click = "bodyLock = true, services = true",
							class = "m-auto mt-10 mb-4 md:mx-auto sm:mx-auto md:mb-0 md:ml-0",
							theme = 'white'
						) %}
							Подробнее
						{% endcall %}
					</div>
				</div>
			</div>
			{% endfor %} 
			{% for item in service.services %}
			<div class="swiper-slide">
				<div
					class="m-7 mx-auto grid max-w-[310px] gap-x-12 rounded-3xl bg-gradient-to-b from-medium-purple-2 to-seance-2 sm:gap-y-1 md:max-w-[800px] md:grid-cols-a1 md:gap-y-5 md:p-5"
				>
					<p
						class="pt-[29px] pb-[10px] text-center text-lg font-bold md:hidden"
					>
						{{ item.title }}
					</p>
					<div class="w-full mx-auto">
						<div class="grid h-[220px] w-[300px]">
							<img
								src="/assets/images/{{ item.img }}"
								alt="человекозаврик"
							/>
						</div>
						<div class="relative mx-auto w-max">
							<div
								class="relative z-[1] my-4 w-max rounded-[50px] bg-bright-sun py-[10px] px-[16px] font-semibold not-italic text-black"
							>
								<p>от {{ item.price }} руб</p>
							</div>
							<div
								class="z-[1]rounded-[3px] absolute -left-1/4 top-1/2 h-[3px] w-[150%] bg-white"
							></div>
						</div>
					</div>
					<div>
						<div class="hidden md:block">
							<p class="pt-[20px] text-[20px] font-bold">
								{{ item.title }}
							</p>
						</div>
						<ul
							class="grid pt-1 pl-1 text-lg font-semibold gap-y-6"
						>
							{% for subitem in item.serviceText %}
							<li
								class="{% if loop.index === 1 %} {% else %} {% endif %} hidden max-w-max pr-[20%] pl-[20%] text-center md:block md:pr-0 md:pl-0 md:text-left lg:p-0 lg:text-left"
							>
								{{ subitem.text }}
							</li>
							{% endfor %}
						</ul> 
						{% call button( 
							click = "bodyLock = true, services = true",
							class = "m-auto mt-10 mb-4 md:mx-auto sm:mx-auto md:mb-0 md:ml-0",
							theme = 'white'
						) %}
							Подробнее
						{% endcall %}
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% call elModal.modal("services") %}
		<div class="container p-5 mx-auto">
			<p class="text-xl font-extrabold text-transparent uppercase sm:text-center sm:text-3xl bg-clip-text bg-gradient-to-r from-malibu to-dodger-blue">Дизайн сайтов</p>
			<div class="bg-gradient-to-r mx-auto max-w-lg from-malibu to-dodger-blue h-0.5 rounded-sm mt-5"></div>
			<div class="w-full mt-10">
				<p class="text-2xl font-bold text-center text-white">Наши услуги</p>
				<div class="grid mt-10 gap-y-10 lg:grid-cols-2">
					<img src="/assets/images/rocket.png">
					<div class="mx-auto lg:mx-0">
						<ul class="flex flex-col justify-between h-full">
							{% for item in serviceList %}
								<li class="text-lg font-medium text-white">✔️{{ item.text }}</li>
							{% endfor %}
						</ul>
						{% call button(
							theme = 'white',
							class = "p-3 mt-3 hover:shadow-md hover:shadow-white"
						) %}
							Заказать дизайн
						{% endcall %}
					</div>
				</div>
			</div>
		</div>
		{{ label
			(
				theme = 'right',
				class = 'mt-20',
				text = "Процесс"
			) 
		}}
		<div class="p-5 sm:p-6 lg:p-11 xl:p-14">
            <div class="mx-auto text-center text-white">
                <h1 class="text-xs font-bold uppercase sm:text-2xl lg:text-3xl">Прайс-Лист</h1>
                <p class="leading-[12px] text-[10px] sm:text-lg lg:text-2xl font-semibold">стоимость услуг, тарифы, цены</p>
                <div class="mt-6 max-w-screen-xl mx-auto bg-white rounded-full h-0.5"></div>
            </div>
            <div class="container mx-auto">
                {% for item in tables.priceList %}
                	{% if item.enable %}
						<div class="mt-20">
							<h2 class="ml-3 text-xs underline sm:ml-5 lg:ml-7 xl:ml-10 sm:text-lg lg:text-2xl">{{ item.title }}</h2>
							<table class="w-full mx-auto text-white">
								<tbody>
									{% for subitem in item.list %}
										{% if subitem.enable %}
											<tr class="grid items-center border-b-2 grid-cols-1a sm:grid-cols-[1fr,repeat(2,auto)] xl:grid-cols-[20%,1fr,minmax(312px,auto),auto] py-3 gap-2 sm:gap-x-3 lg:gap-x-4 lg:gap-y-1 xl:gap-x-8 border-electric-violet">
												<td class="text-xs font-semibold sm:text-base lg:text-lg">{{ subitem.title }}</td>
												<td class="row-start-2 text-xs font-medium leading-[10px] sm:leading-5 text-[8px] sm:text-xs lg:text-sm sm:col-span-2 lg:col-auto xl:row-start-auto">{{ subitem.subtitle }}</td>
												<td class="row-start-3 text-xs font-semibold sm:text-base lg:text-lg sm:row-auto lg:row-span-2 xl:row-auto xl:whitespace-nowrap">
													от {{ subitem.priceFrom }}{% if subitem.priceTo %} до {{ subitem.priceTo }}{% endif %} руб.{% if subitem.month %}/мес.{% endif %}
												</td>
												<td class="row-span-3 sm:row-span-2 xl:row-auto">
													{% if subitem.link %}
														{% call button
															(   
																class = "mx-auto -rotate-90", 
																link = subitem.link,
																size = "small",
																iconName = "arrow",
																hideText = subitem.title
															) 
														%}{% endcall %}
													{% endif %}
												</td>
											</tr>
										{% endif %}
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% endif %}
            	{% endfor %}
            </div>
        </div>
		<div class="container p-5 mx-auto mt-10">
			<ul class="grid gap-5 mx-auto max-w-max lg:grid-cols-2 xl:grid-cols-3">
				{% for item in process %}
					<li class="sm:p-6 max-w-[400px] {% if loop.last %} md:col-span-2 xl:col-span-1 xl:mx-0 md:mx-auto {% endif %} text-white">
						<p class="text-xl font-bold uppercase sm:text-3xl">{{ loop.index }}. {{ item.title }}</p>
						<span class="block text-lg sm:pt-6 sm:pl-6">{{ item.text }}</span>
					</li>
				{% endfor %}
			</ul>
		</div>
	{% endcall %}
</section>
