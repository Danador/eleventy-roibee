<!doctype html>
<html class="scroll-smooth" lang="{{ locale|default('ru') }}">
	<head>
		<meta charset="utf-8">
		<link rel="dns-prefetch" href="https://identity.netlify.com">
		<link rel="canonical" href="{{ site.rootUrl }}{{ page.url }}">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ envs.site.name }}</title>
		<meta name="description" content="{{ description }}">
		<meta name="keywords" content="{{ keywords }}">
		<link rel="icon" type="image/svg+xml" href="{{ envs.site.faviconUrl | url }}">
		<script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<link rel="stylesheet" href="/dist/css/style.css">
	</head>
	<body
		class="font-body"
		x-data="{
			bodyLock : false,
			scrollWidth: 0
		}"
		:class=" bodyLock ? 'overflow-hidden' : ''"
		:style="bodyLock ? 'padding-right:' + scrollWidth : ''"
		x-ref="body"
		x-init="scrollWidth = window.innerWidth - $refs.body.offsetWidth + 'px'"
	>
		{% include "partials/header/header.njk" %}
		<main>
			{{ content | safe }}
		</main>
		{% include "partials/footer/footer.njk" %}
		<script type="text/javascript" >
			(function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
			m[i].l=1*new Date();k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
			(window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");
			ym(86852439, "init", {
					clickmap:true,
					trackLinks:true,
					accurateTrackBounce:true,
					webvisor:true
			});
			</script>
		<script src="/dist/js/app.js"></script>
	</body>

</html>
