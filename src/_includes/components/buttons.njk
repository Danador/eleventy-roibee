{% from "components/icon/icon.njk" import icon %}

{% macro button(type, click, theme, class, iconName, iconLeft) %}
	<button
		type="{{ type|default('button') }}"
		{% if click %}
			@click="{{ click }}"
		{% endif %}
		class="
			{{ class }}
			flex text-lg font-semibold rounded-full outline-none items-center justify-center p-4 max-w-max transition-all duration-300 ease-linear active:opacity-60 
			{% if theme=='white' %} 
				bg-gradient-to-b active:shadow-black hover:shadow-black focus-visible:shadow-black from-white to-silver shadow-white text-black
			{% elif theme=='black' %}
				ring-2 ring-white hover:shadow-puk focus-visible:shadow-puk
			{% else %} 
				text-white bg-gradient-to-t from-seance-2 to-medium-purple-2 shadow-medium-purple shadow-purp hover:shadow-fiol 
			{% endif %}
		"
	>
		{% if iconLeft==true and iconName %}
			{{ icon(name = iconName) }}
		{% endif %}
		<span class="px-2 empty:hidden">
			{{ caller() }}
		</span>
		{% if iconLeft!=true and iconName %}
			{{ icon(name = iconName) }}
		{% endif %}
	</button>
{% endmacro %}