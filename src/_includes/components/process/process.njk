<section>
	<!-- стили бывшего yarlik -->
	<div
		class="relative mt-16 ml-auto flex max-w-1/2 items-center justify-start rounded-l-[70px] bg-gradient-to-r from-seance-2/[1.87] to-medium-purple-2/[1.10] before:absolute before:top-2 before:left-2 before:right-0 before:z-[-1] before:h-16 before:rounded-l-[70px] before:rounded-r-[0] before:ring-1 before:ring-white"
	>
		<p class="py-5 px-9">Процесс</p>
	</div>
	<div
		x-data="{ activeSlide: 1 }"
		class="relative mx-auto mt-10 grid max-w-max grid-cols-a1 gap-x-10 px-5"
	>
		<ul class="grid gap-y-3 text-white">
			{% for item in process %}
			<li
				:class="activeSlide === {{ loop.index }} ? 'translate-x-5' : 'opacity-60'"
				class="flex items-center rounded-full bg-gradient-to-r from-heliotrope to-electric-violet-2 p-4 transition-all duration-300"
			>
				{{ loop.index }}. {{ item.title }}
			</li>
			{% endfor %}
		</ul>
		{% for item in process %}
		<div
			x-show="activeSlide === {{ loop.index }}"
			class="grid h-full max-w-[700px] grid-rows-1a rounded-3xl bg-mine-shaft p-4"
		>
			<div>
				<h2 class="mb-2.5 text-center text-2xl uppercase">
					{{ item.title }}
				</h2>
				<p class="px-10">{{ item.text }}</p>
			</div>
			<div class="flex justify-between px-10">
				{% if not loop.first %}
				<button
					@click="activeSlide = {{ loop.index }} - 1"
					class="max-w-max items-center justify-center rounded-full px-8 py-4 font-semibold ring-2 ring-white transition-all duration-300 active:opacity-60"
				>
					<span>Назад</span>
				</button>
				{% endif %} {% if not loop.last %}
				<button
					@click="activeSlide = {{ loop.index }} + 1"
					class="ml-auto flex max-w-max items-center justify-center rounded-full bg-gradient-to-b from-white to-silver px-8 py-4 font-semibold text-black transition-all duration-300 hover:shadow-puk focus:shadow-puk active:opacity-60"
				>
					<span>Вперед</span>
				</button>
				{% endif %}
			</div>
		</div>
		{% endfor %}
	</div>
</section>
